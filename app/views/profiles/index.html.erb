<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Views</th>
    <th>Downloads</th>
    <th>Contacts</th>
    <th>View date</th>
    <th>Job post</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.views %></td>
    <td><%= profile.downloads %></td>
    <td><%= profile.contacts %></td>
    <td><%= profile.view_date %></td>
    <td><%= profile.job_post_id %></td>
    <td><%= profile.user_id %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

